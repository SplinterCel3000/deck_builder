<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="./styles/reset.css">
  <link rel="stylesheet" href="./styles/base.css">
  <link rel="stylesheet" href="./styles/layout.css">
  <link rel="stylesheet" href="./styles/module.css">
  <title>Collection</title>
</head>

<body>
  <div class="frame">

    <br><h1>Collection</h1><br>
    <a id = "home-button-collection" class="nav-button" href="/" target="_self">Home</a>
    <a id = "wish-list-collection" class="nav-button" href="/wish-list" target="_self">Wish List</a>
    <br><br>

    <!-- DELETE ALL FROM COLLECTION -->
    
    <form action="<%= `/deleteAll?_method=DELETE` %>" method="POST">
      <input type="hidden" name="tag" value="collection"></input>
      <button id = "delete-all-button-collection" class="delete-button" type="submit">Delete All from Collection</button>
    </form>
    <br><br>

    <% collectionArray.forEach(card => { %>
    <div>
      <img src=<%= card.image_url %>><br><br>
      <h3>Card Name: <%= card.name %></h3>
      <p>Release Date: <%= card.date %></p>
      <p>Standard: <%= card.legal0 %></p>
      <p>Pioneer: <%= card.legal1 %></p>
      <p>Modern: <%= card.legal2 %></p>
      <p>Legacy: <%= card.legal3 %></p>
      <p>Commander: <%= card.legal4 %></p><br>
    </div>
    
    <!-- DELETE FROM COLLECTION -->
    
    <form action="<%= `/delete?_method=DELETE` %>" method="POST">
      <input type="hidden" name="name" value="<%= card.name %>"></input>
      <input type="hidden" name="tag" value="collection"></input>
      <button id = "delete-button-collection" class="delete-button" type="submit">Delete Card from Collection</button class="delete-button">
    </form>
    <hr><br>

    <% }) %>
  </div>
 
  <script src = "https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="js/app.js"></script>
</body>

</html>