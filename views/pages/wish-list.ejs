<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="./styles/reset.css">
  <link rel="stylesheet" href="./styles/base.css">
  <link rel="stylesheet" href="./styles/layout.css">
  <link rel="stylesheet" href="./styles/module.css">
  <title>Wish List</title>
</head>

<body>
  <div class="frame">

    <h1>Wish List</h1>
    <a class="nav-button" href="/" target="_self">Home</a>
    <a class="nav-button" href="/collection" target="_self">Collection</a>
    <br><br>

    <% wishlistArray.forEach(card => { %>
    <div>
      <img src=<%= card.image_url %>>
      <h3>Card Name: <%= card.name %></h3>
      <p>Release Date: <%= card.date %></p>
      <p>Standard: <%= card.legal0 %></p>
      <p>Pioneer: <%= card.legal1 %></p>
      <p>Modern: <%= card.legal2 %></p>
      <p>Legacy: <%= card.legal3 %></p>
      <p>Commander: <%= card.legal4 %></p>

      <!-- UPDATE TO COLLECTION -->

      <form action="<%= `/update?_method=PUT` %>" method="POST">
        <input type="hidden" name="name" value="<%= card.name %>"></input>
        <button class="nav-button" type="submit">Add Card to Collection</button>
      </form>
      <br>

      <!-- DELETE FROM WISH LIST -->

      <form action="<%= `/deleteWishList?_method=DELETE` %>" method="POST">
        <input type="hidden" name="name" value="<%= card.name %>"></input>
        <button  class="delete-button" class="nav-button" type="submit">Delete Card from Wish List</button>
      </form>
      <hr><br>
    </div>
    <% }) %>

  </div> <!-- frame div close tag -->

  <script src="./js/app.js"></script>
</body>

</html>