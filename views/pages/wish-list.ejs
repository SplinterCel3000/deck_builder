<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="./styles/reset.css">
  <link rel="stylesheet" href="./styles/base.css">
  <link rel="stylesheet" href="./styles/layout.css">
  <link rel="stylesheet" href="./styles/module.css">
  <title>Wish List</title>
</head>

<body>
  <div class="frame">

    <br>
    <h1>Wish List</h1><br>
    <a class="nav-button" href="/" target="_self">Home</a>
    <a class="nav-button" href="/collection" target="_self">Collection</a>
    <br><br>

    <!-- DELETE ALL FROM WISHLIST -->

    <form action="<%= `/deleteAll?_method=DELETE` %>" method="POST">
      <input type="hidden" name="tag" value="wish-list"></input>
      <button class="delete-button" type="submit">Delete All from Wish List</button>
    </form>
    <br><br>

    <% wishlistArray.forEach(card => { %>
    <div class="parent-div">
      <div class="card-img">
        <img src=<%= card.image_url %>></div><br><br>
      <div class="all-information">
        <h3>Card Name: <%= card.name %></h3>
        <p>Release Date: <%= card.date %></p>
        <p>Standard: <%= card.legal0 %></p>
        <p>Pioneer: <%= card.legal1 %></p>
        <p>Modern: <%= card.legal2 %></p>
        <p>Legacy: <%= card.legal3 %></p>
        <p>Commander: <%= card.legal4 %></p><br>
        <!-- UPDATE TO COLLECTION -->
        <form action="<%= `/update?_method=PUT` %>" method="POST">
          <input type="hidden" name="name" value="<%= card.name %>"></input>
          <button class="nav-button" type="submit">Add Card to Collection</button>
        </form>
        <br>
        <!-- DELETE FROM WISH LIST -->
        <form action="<%= `/delete?_method=DELETE` %>" method="POST">
          <input type="hidden" name="name" value="<%= card.name %>"></input>
          <input type="hidden" name="tag" value="wish-list"></input>
          <button class="delete-button" type="submit">Delete Card from Wish List</button>
        </form>
      </div>
    </div>
    <hr><br>
    <% }) %>

  </div> <!-- frame div close tag -->

  <script src="./js/app.js"></script>
</body>

</html>