<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="./styles/style.css">
  <title>Results</title>
</head>

<body>
  <h1>Results: <%= totalCardCount %></h1>
  <a href="/" target="_self">Home</a>

  <% cardArray.forEach(card => { %>
  <div>
    <img src=<%= card.image_url %>>
    <h3>Card name: <%= card.name %></h3>
    <p>Release date: <%= card.date %></p>
    <p>Standard: <%= card.legal0 %></p>
    <p>Pioneer: <%= card.legal1 %></p>
    <p>Modern: <%= card.legal2 %></p>
    <p>Legacy: <%= card.legal3 %></p>
    <p>Commander: <%= card.legal4 %></p>

    <form action="/results" method="post"></form>

    <!-- ADD TO WISH LIST -->

    <form action="/wish-list" method="post">
      <fieldset>
        <input type="hidden" name="name" value="<%= card.name %>"></input>
        <input type="hidden" name="date" value="<%= card.date %>"></input>
        <input type="hidden" name="image_url" value="<%= card.image_url %>"></input>
        <input type="hidden" name="legal0" value="<%= card.legal0 %>"></input>
        <input type="hidden" name="legal1" value="<%= card.legal1 %>"></input>
        <input type="hidden" name="legal2" value="<%= card.legal2 %>"></input>
        <input type="hidden" name="legal3" value="<%= card.legal3 %>"></input>
        <input type="hidden" name="legal4" value="<%= card.legal4 %>"></input>
        <input type="hidden" name="tag" value="wishlist"></input>
        <button type="submit">Add Card to Wish List</button>

      </fieldset>
    </form>

    <!-- ADD TO COLLECTION -->

    <form action="/collection" method="post">
      <fieldset>
        <input type="hidden" name="name" value="<%= card.name %>"></input>
        <input type="hidden" name="date" value="<%= card.date%>"></input>
        <input type="hidden" name="image_url" value="<%= card.image_url %>"></input>
        <input type="hidden" name="legal0" value="<%= card.legal0 %>"></input>
        <input type="hidden" name="legal1" value="<%= card.legal1 %>"></input>
        <input type="hidden" name="legal2" value="<%= card.legal2 %>"></input>
        <input type="hidden" name="legal3" value="<%= card.legal3 %>"></input>
        <input type="hidden" name="legal4" value="<%= card.legal4 %>"></input>
        <input type="hidden" name="tag" value="collection"></input>
        <button type="submit">Add Card to Collection</button>

      </fieldset>
    </form>

  </div>
  <% }) %>

  <!-- Add Detail button  -->

  <script src="./js/app.js"></script>
</body>

</html>