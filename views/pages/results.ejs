<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="./styles/style.css">
  <title>Results</title>
</head>

<body>
  <h1>Results</h1>
  <a href="/" target="_self">Home</a>

  <% cardArray.forEach(card => { %>
  <div>
    <img src=<%= card.image_url %>>
    <h3><%= card.name %></h3>
    <p><%= card.released %></p>
    <p><%= card.legal %></p>

    <!-- ADD TO WISH LIST -->

    <form action="/wish-list" method="post">
      <fieldset>
        <input type="hidden" name="name" value="<%= card.name %>"></input>
        <input type="hidden" name="released" value="<%= card.released %>"></input>
        <input type="hidden" name="image_url" value="<%= card.image_url %>"></input>
        <!-- <input type="hidden" name="deck" value="<%= card.deck %>"></input> -->
        <button type="submit">Add Card to Wish List</button>
        
      </fieldset>
    </form>

    <!-- ADD TO COLLECTION -->

    <form action="/collection" method="post">
      <fieldset>
        <input type="hidden" name="name" value="<%= card.name %>"></input>
        <input type="hidden" name="released" value="<%= card.released %>"></input>
        <input type="hidden" name="image_url" value="<%= card.image_url %>"></input>
        <!-- <input type="hidden" name="deck" value="<%= card.deck %>"></input> -->
        <button type="submit">Add Card to Collection</button>
        
      </fieldset>
    </form>
    
  </div>
  <% }) %>

  <!-- Add Detail button  -->

  <script src="./js/app.js"></script>
</body>

</html>